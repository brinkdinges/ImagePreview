<UserControl x:Class="ImagePreview.QuickInfo.PreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImagePreview.QuickInfo"
             mc:Ignorable="d"
             MaxWidth="500"
             MaxHeight="500"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="panel" Orientation="Vertical">
            <Image Name="imgPreview" Stretch="Uniform" StretchDirection="DownOnly" Visibility="Collapsed" />
            <MediaElement Name="mediaPreview" LoadedBehavior="Play" Stretch="Uniform" StretchDirection="DownOnly" Visibility="Collapsed" />
            <Label Name="lblSize" Content="Loading preview..."/>
        </StackPanel>
    </Grid>
</UserControl>
